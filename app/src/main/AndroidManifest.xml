<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.appmp3">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".view.module.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppMp3">
        <activity
            android:name=".view.module.splash.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppMp3.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.module.home.MainActivity"
            android:theme="@style/Theme.AppMp3.NoActionBar">
        </activity>

        <activity
            android:name=".view.module.categorydetail.DetailCategoryActivity"
            android:theme="@style/Theme.AppMp3.NoActionBar"
            android:parentActivityName=".view.module.home.MainActivity">

        </activity>

        <activity
            android:name=".view.module.login.LoginActivity"
            android:theme="@style/Theme.AppMp3.NoActionBar"
            android:parentActivityName=".view.module.home.MainActivity">

        </activity>

        <activity
            android:name=".view.module.login.RegisterActivity"
            android:theme="@style/Theme.AppMp3.NoActionBar"
            android:parentActivityName=".view.module.home.MainActivity">

        </activity>
    </application>

</manifest>